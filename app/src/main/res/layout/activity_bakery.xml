<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="12dp"
    tools:context=".BakeryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- BACK BUTTON -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_back"
            app:tint="?attr/colorOnBackground"
            android:layout_marginTop="6dp"
            android:layout_marginStart="4dp"/>

        <!-- LOGO -->
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/bakery"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"/>

        <!-- Judul -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bakery Order"
            android:textAlignment="center"
            android:textColor="?attr/colorOnBackground"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_margin="10dp" />

        <!-- Nama Customer -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/colorSurface">

            <EditText
                android:id="@+id/etNamaCustomer"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@null"
                android:hint="Nama Customer"
                android:padding="14dp"
                android:textColor="?attr/colorOnBackground"

                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <!-- Section: Bakery Items -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¥ Pastry n Bread"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginVertical="8dp" />

        <!-- ðŸ”¸ Croissant -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_marginVertical="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgCroissant"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/croissant"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvNamaCroissant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Croissant"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/imgCroissant"
                    app:layout_constraintTop_toTopOf="@id/imgCroissant" />

                <TextView
                    android:id="@+id/tvHargaCroissant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 12.000"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/imgCroissant"
                    app:layout_constraintTop_toBottomOf="@id/tvNamaCroissant" />

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHargaCroissant"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/etJmlCroissant"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="Jumlah"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnBackground"/>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ”¸ Donut -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_marginVertical="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgDonut"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/donut"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvNamaDonut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cookies n Cream Donut"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/imgDonut"
                    app:layout_constraintTop_toTopOf="@id/imgDonut"/>

                <TextView
                    android:id="@+id/tvHargaDonut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 10.000"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/imgDonut"
                    app:layout_constraintTop_toBottomOf="@id/tvNamaDonut"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHargaDonut"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/etJmlDonut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="Jumlah"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnBackground"/>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section Minuman -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â˜• Drinks"
            android:textColor="?attr/colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginVertical="8dp" />

        <!-- ðŸ”¹ Chocolate -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_marginVertical="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgChocolate"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/chocolate"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvNamaChocolate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chocolate"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/imgChocolate"
                    app:layout_constraintTop_toTopOf="@id/imgChocolate"/>

                <TextView
                    android:id="@+id/tvHargaChocolate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 15.000"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/imgChocolate"
                    app:layout_constraintTop_toBottomOf="@id/tvNamaChocolate"/>

                <Spinner
                    android:id="@+id/spChocolate"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:entries="@array/hot_ice"
                    android:backgroundTint="?attr/colorPrimary"
                    app:layout_constraintStart_toEndOf="@id/imgChocolate"
                    app:layout_constraintEnd_toStartOf="@id/etCardChocolate"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/etCardChocolate"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHargaChocolate"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/etJmlCappuccino"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="Jumlah"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnBackground"/>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ”¹ Strawberry Milkshake -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="?attr/colorSurface"
            android:layout_marginVertical="6dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/imgMilkshake"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/milkshake"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvNamaMilkshake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strawberry Milkshake"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/imgMilkshake"
                    app:layout_constraintTop_toTopOf="@id/imgMilkshake"/>

                <TextView
                    android:id="@+id/tvHargaMilkshake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 18.000"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@id/imgMilkshake"
                    app:layout_constraintTop_toBottomOf="@id/tvNamaMilkshake"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/etCardMilkshake"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvHargaMilkshake"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/etJmlMilkshake"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="Jumlah"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnBackground"/>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tombol Pesan -->
        <Button
            android:id="@+id/btnPesan"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Pesan Sekarang"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnBackground"
            android:layout_marginVertical="14dp"
            android:layout_marginHorizontal="8dp"
            android:background="?attr/colorSurface"/>

    </LinearLayout>
</ScrollView>
