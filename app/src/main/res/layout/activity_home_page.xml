<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Logo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:src="@drawable/hopewavelogo"
                android:contentDescription="Logo" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="HopeWave"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#3187C9" />

            <!-- Main Menu -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Main Menu"
                        android:textColor="#3187C9"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:columnCount="2">

                        <!-- Formulir -->
                        <LinearLayout
                            android:id="@+id/btnFormulir"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_margin="6dp"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#C9E4DE">

                            <ImageView
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/form" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Formulir"
                                android:textColor="#000" />
                        </LinearLayout>

                        <!-- Profile -->
                        <LinearLayout
                            android:id="@+id/btnProfile"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_margin="6dp"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#F7DAD9">

                            <ImageView
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/profile" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile"
                                android:textColor="#000" />
                        </LinearLayout>

                        <!-- Bakery -->
                        <LinearLayout
                            android:id="@+id/btnBakery"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_margin="6dp"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#F6EAC2">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/bakery" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bakery"
                                android:textColor="#000" />
                        </LinearLayout>

                        <!-- Calculator -->
                        <LinearLayout
                            android:id="@+id/btnCalculator"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_margin="6dp"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#D6E5FA">

                            <ImageView
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/calculator" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calculator"
                                android:layout_marginTop="5dp"
                                android:textColor="#000" />
                        </LinearLayout>

                        <!-- Konversi Suhu -->
                        <LinearLayout
                            android:id="@+id/btnKonversi"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_margin="6dp"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#E8DFF5">

                            <ImageView
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/temperature" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Konversi Suhu"
                                android:layout_marginTop="5dp"
                                android:textColor="#000" />
                        </LinearLayout>

                        <!-- Exit -->
                        <LinearLayout
                            android:id="@+id/btnExit"
                            android:layout_width="0dp"
                            android:layout_height="110dp"
                            android:layout_margin="6dp"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="#F4C7AB">

                            <ImageView
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:src="@drawable/exit" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Exit"
                                android:layout_marginTop="5dp"
                                android:textColor="#000" />
                        </LinearLayout>

                    </GridLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
